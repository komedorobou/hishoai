{
  "version": 2,
  "name": "hishoai-enhanced",
  "description": "HishoAI Enhanced - AI Assistant with Deep Research Capabilities",
  "builds": [
    { 
      "src": "api/openai-proxy.js", 
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization, OpenAI-Beta, OpenAI-Organization"
        },
        {
          "key": "Access-Control-Max-Age",
          "value": "86400"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/chat",
      "destination": "/index.html"
    },
    {
      "source": "/deep-research",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/api",
      "destination": "/api/openai-proxy",
      "permanent": false
    }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 1800,
      "runtime": "nodejs18.x",
      "memory": 1024,
      "environment": {
        "NODE_ENV": "production"
      }
    }
  },
  "regions": [
    "iad1",
    "sfo1"
  ],
  "env": {
    "OPENAI_API_KEY": "@openai_api_key"
  },
  "github": {
    "silent": true
  },
  "cleanUrls": true,
  "trailingSlash": false
}
